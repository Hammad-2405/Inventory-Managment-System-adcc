<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Vendors</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: white;
        }

        header {
            background-color: darkblue;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        nav {
            background-color: blue;
            padding: 10px;
            text-align: center;
        }

        nav a {
            padding: 10px;
            margin: 10px;
            text-decoration: none;
            color: #fff;
            font-weight: bold;
        }

        section {
            padding: 20px;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: darkblue;
            color: #fff;
        }

        .details {
            display: none;
            padding: 10px;
            margin-top: 10px;
            background-color: #f0f0f0;
        }

        .button-details {
            background-color: blue;
            color: white;
            border: none;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none; /* Remove underlines */
            display: inline-block; /* Make it inline-block for padding */
            margin: 0; /* Reset margin */
        }

        .button-details:hover {
            background-color: darkblue;
        }
    </style>
</head>

<body>
    <header>
        <h1>All Vendors</h1>
    </header>
    <section>
        <table>
            <thead>
                <tr>
                    <th>Project ID</th>
                    <th>Vendor Name</th>
                    <th>Contact</th>
                    <th>CNIC</th>
                    <th>Works On</th>
                </tr>
            </thead>
            <tbody>
                <% vendors.forEach(vendor => { %>
                    <tr>
                        <td><%= vendor.project_id %></td>
                        <td><%= vendor.vendor_name %></td>
                        <td><%= vendor.contact %></td>
                        <td><%= vendor.cnic %></td>
                        <td><%= vendor.works_on %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div id="details" class="details"></div>
    </section>
</body>

</html>
